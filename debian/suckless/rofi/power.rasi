* {
    bg: #00141d;
    background-color: @bg;
    font: "JetBrainsMono Nerd Font 12";  /* Monospace font for alignment */
}

configuration {
    show-icons: true;
    icon-theme: "Papirus";
    location: 0;
    display-drun: "Launch:";
}

window { 
    width: 20%;
    transparency: "real";
    orientation: vertical;
    border-color: #4fc3f7;
    border-radius: 10px;
}

mainbox {
    children: [inputbar, listview];
}

// ELEMENT
// -----------------------------------

element {
    padding: 4 8;
    text-color: #FFFFFF;
    background-color: #00141d;
    border-radius: 5px;
}

element.selected {
    text-color: #1a1a1a;
    background-color: #b3e5fc;
}

element-text {
    background-color: inherit;
    text-color: inherit;
}

element-icon {
    size: 16 px;
    background-color: inherit;
    padding: 0 6 0 0;
    alignment: vertical;
}

element.selected.active {
    background-color: #00141d;
    text-color: #FFFFFF;
}

element.alternate.normal {
    background-color: #00141d;
    text-color: #FFFFFF;
}

element.alternate.active {
    background-color: #b3e5fc;
    text-color: #1a1a1a;
}

element.selected.normal {
    background-color: #b3e5fc;
    text-color: #1a1a1a;
}

element.normal.active {
    background-color: #00141d;
    text-color: #FFFFFF;
}

element.normal.normal {
    background-color: #00141d;
    text-color: #FFFFFF;
}

element.normal.urgent {
    background-color: #f25d78;
    text-color: #1a1a1a;
}

listview {
    columns: 1;  /* Show in a single column for better alignment */
    lines: 8;
    padding: 8 0;
    fixed-height: true;
    fixed-columns: true;
    fixed-lines: true;
    border: 0 10 6 10;
}

inputbar {
    padding: 10 0 0;
    margin: 0 0 0 0;
}

entry {
    text-color: #f27893;
    padding: 10 10 0 0;
    margin: 0 -2 0 0;
}

prompt {
    text-color: #78a9ff;
    padding: 10 6 0 10;
    margin: 0 -2 0 0;
}
