# Font
font_family JetBrainsMono Nerd Font
font_size 10.0

# Window background
background_opacity 0.90

# Blur (only works if your compositor supports it, e.g. picom)
#background_blur 20

# Cursor
cursor_shape beam
cursor_blink_interval 0

# Scrollback
scrollback_lines 5000

# Misc UI tweaks
enable_audio_bell no
