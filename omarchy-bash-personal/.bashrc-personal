# start neovim with vimwiki
# alias vw='kitty --class=VW -e nvim -c "VimwikiIndex" &'
# Smart Vimwiki launcher
vw() {
    if command -v kitty >/dev/null 2>&1; then
        if [ -n "$DISPLAY" ]; then
            kitty --class VW nvim -c VimwikiIndex & disown
            return
        else
            printf '%s\n' 'Kitty is installed but no GUI session detected. Falling back to nvim.'
        fi
    fi
    nvim -c VimwikiIndex
}


