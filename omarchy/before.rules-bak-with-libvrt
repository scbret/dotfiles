#
# /etc/ufw/before.rules
#
# Rules that should run before UFW's command-line added rules.
# Custom rules should be added to one of these chains:
#   ufw-before-input
#   ufw-before-output
#   ufw-before-forward
#

# -----------------------------
# FILTER TABLE
# -----------------------------
*filter
:ufw-before-input - [0:0]
:ufw-before-output - [0:0]
:ufw-before-forward - [0:0]
:ufw-not-local - [0:0]

# Allow forwarding on the libvirt bridge in both directions
-A ufw-before-forward -i virbr0 -j ACCEPT
-A ufw-before-forward -o virbr0 -j ACCEPT

# Allow all on loopback
-A ufw-before-input -i lo -j ACCEPT
-A ufw-before-output -o lo -j ACCEPT

# Fast-path for established/related traffic
-A ufw-before-input  -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A ufw-before-output -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A ufw-before-forward -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT

# Drop INVALID packets (log at medium and higher)
-A ufw-before-input -m conntrack --ctstate INVALID -j ufw-logging-deny
-A ufw-before-input -m conntrack --ctstate INVALID -j DROP

# ICMP (INPUT)
-A ufw-before-input -p icmp --icmp-type destination-unreachable -j ACCEPT
-A ufw-before-input -p icmp --icmp-type time-exceeded -j ACCEPT
-A ufw-before-input -p icmp --icmp-type parameter-problem -j ACCEPT
-A ufw-before-input -p icmp --icmp-type echo-request -j ACCEPT

# ICMP (FORWARD)
-A ufw-before-forward -p icmp --icmp-type destination-unreachable -j ACCEPT
-A ufw-before-forward -p icmp --icmp-type time-exceeded -j ACCEPT
-A ufw-before-forward -p icmp --icmp-type parameter-problem -j ACCEPT
-A ufw-before-forward -p icmp --icmp-type echo-request -j ACCEPT

# -----------------------------
# DHCP Rules (guest <-> dnsmasq)
# -----------------------------
# Client request: guest -> host (68 -> 67)
-A ufw-before-input   -i virbr0 -p udp --sport 68 --dport 67 -j ACCEPT
-A ufw-before-forward -i virbr0 -p udp --sport 68 --dport 67 -j ACCEPT

# Server reply: host -> guest (67 -> 68)
-A ufw-before-output  -o virbr0 -p udp --sport 67 --dport 68 -j ACCEPT
-A ufw-before-forward -o virbr0 -p udp --sport 67 --dport 68 -j ACCEPT

# -----------------------------
# DNS to host (dnsmasq answers on 53)
# -----------------------------
-A ufw-before-input -i virbr0 -p udp --dport 53 -j ACCEPT
-A ufw-before-input -i virbr0 -p tcp --dport 53 -j ACCEPT

# mDNS and UPnP multicast (optional, safe to keep)
-A ufw-before-input -p udp -d 224.0.0.251 --dport 5353 -j ACCEPT
-A ufw-before-input -p udp -d 239.255.255.250 --dport 1900 -j ACCEPT

# -----------------------------
# ufw-not-local chain
# -----------------------------
-A ufw-before-input -j ufw-not-local
-A ufw-not-local -m addrtype --dst-type LOCAL -j RETURN
-A ufw-not-local -m addrtype --dst-type MULTICAST -j RETURN
-A ufw-not-local -m addrtype --dst-type BROADCAST -j RETURN
-A ufw-not-local -m limit --limit 3/min --limit-burst 10 -j ufw-logging-deny
-A ufw-not-local -j DROP

# Allow forwarding overall (UFW still filters via its chains)
-P FORWARD ACCEPT

# Don't delete the COMMIT line or these rules won't be processed
COMMIT

# -----------------------------
# NAT TABLE (for libvirt VMs)
# -----------------------------
*nat
:PREROUTING ACCEPT [0:0]
:INPUT       ACCEPT [0:0]
:OUTPUT      ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]

# Masquerade libvirtâ€™s default subnet out via wlan0
-A POSTROUTING -s 192.168.122.0/24 -o wlan0 -j MASQUERADE

COMMIT
